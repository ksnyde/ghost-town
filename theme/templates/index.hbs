{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The big featured header on the homepage, with the site logo and description }}
<header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}} class="head-content-{{ThematicGhost.head_content_location}}">
    <div class="vertical">
        <div id="site-head-content" class="inner right">
			<div id="branding-header">
	            {{#if @blog.logo}}
					<a id="blog-logo" href="{{@blog.url}}" tabindex="-1"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>
		            <h1 class="blog-title hidden">{{@blog.title}}</h1>
				{{else}}
		            <h1 class="blog-title">{{@blog.title}}</h1>
				{{/if}}
	            <h2 class="blog-description">{{@blog.description}}</h2>
			</div>
			<div class="register register-message">			
				<form id="subscribe-form" action="javascript:subscribeMailChimp()" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
					<div id="registration-widget" class="centered-widget">
						<div class="input-group input-lg">
							<div class="input-group-addon"><i class="fa fa-envelope-o"></i> </div>
							<input id="registration-email" name="EMAIL" class="form-control input-lg" type="email" placeholder="your email address" tabindex="1">
							<div class="input-group-addon submit-registration" tabindex="2">
								<div type="submit" name="subscribe" id="subscribe-button" onClick="subscribeMailChimp()">
									Register
								</div>
							</div>
						  </div>
					  </div>
				</form>
				<div id="description">
					If you're interested in hearing more about what we're doing,
					<br/>add your email above and we'll keep you in the loop.
				</div>		
			</div> {{! END register-message }}
			<div class="register registration-success hidden">
				{{> registration_success}}
			</div>
			<div class="register registration-already-exists hidden">
				{{> registration_already_exists}}
			</div>
			<div class="register registration-error hidden">
				{{> registration_error}}
			</div>
			
			<menu>
				<item tabindex="3" id="about-link">About</item> |
				<item tabindex="5">Contact Us</item>
			</menu>
			
            <i id='header-arrow' class="fa fa-angle-down"></i>
        </div>
    </div>
</header>

{{! The main content area on the homepage }}
<main class="content" role="main">

    <div class='fixed-nav'>
		<i id='upward-arrow' class="fa fa-angle-up home-nav"></i><br/>
		<span class="home-button home-nav">{{@blog.title}}</span><br/>
    </div>

    {{! Each post will be output using this markup }}
    {{#foreach posts}}
    <div class="post-holder {{#if @odd}}odd{{/if}}">
        
            {{#if @first}}
                <article class="{{post_class}} first">
            {{else}}
                {{#if @last}}
                    <article class="{{post_class}} last">
                {{else}}
                    <article class="{{post_class}}">
                {{/if}}
            {{/if}}
        
            <header class="post-header">
                
                <h2 class="post-title">{{{title}}}</h2>

            </header>
            <section class="post-content">
                <p>{{content characters="9999999999999"}}</p>
            </section>
        </article>
        <div class='post-after'></div>
    </div>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    

</main>